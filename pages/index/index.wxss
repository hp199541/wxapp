image {
  width: 100%
}
.page-section-spacing{
  margin-top: 60rpx;
}
.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item{
  height: 200rpx;
}
.scroll-view-item_H{
  display: inline-block;
  width: 100%;
  height: 200rpx;
}
.tip{
  width: 100%;
  height: 50px;
  background-color: gainsboro;
  display: flex;
  justify-content: center;
  align-items: center
}
@keyframes around {
 from {
  margin-left: 90%;
 }
 to {
  /* var接受传入的变量 */
  margin-left: var(--marqueeWidth--);
 }
 }
  
.marquee_container{
 background-color: #fe4655;
 height: 50rpx;
 line-height: 44rpx;
 position: relative;
 width: 90%;
 margin-top:10rpx;
}
.marquee_container:hover{
 /* 不起作用 */
 animation-play-state: paused;
}
.marquee_text{
 color:#f66;
 font-size: 28rpx;
 display: inline-block;
 white-space: nowrap;
 animation-name: around;
 animation-duration: 10s; /*过渡时间*/
 animation-iteration-count: infinite;
 animation-timing-function:linear;
}
.tip-content{
  background-color: white;
  width: 90%;
  height: 30px;
  margin: 10px auto;
  overflow: hidden
}
.buy-way{
  width: 100%;
  height: 110px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: gainsboro
}
.buy-all{
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center
}
.onsale{
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center
}
.search{
  width: 90%;
  height: 30px;
  margin: 0 auto;
  background-color: rgb(189,252,201);
  display: flex;
  align-items: center;
  border-radius: 15px
}
.search input {
  width: 100%;
  display: block;
  height: 30px;
  text-indent: 33%
}
.nav{
  display: flex;
  justify-content: space-around;
  height: 50px;
  line-height: 65px;
  border-bottom: 2px solid #ccc
}
.goods-list{
  display: flex;
  padding: 10px
}
.goods-list-r{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around
}
.goods-bottom{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between
}